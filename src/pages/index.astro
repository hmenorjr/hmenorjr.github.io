---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import heroImage from "../images/about-me.jpg";
import heroImageDark from "../images/logo-dark.png";
import heroImageLight from "../images/logo-light.png";
import FeaturedArticles from "../components/articles/FeaturedArticles.astro";
// import Projects from "../components/Projects.astro";
// import NewsletterForm from "../components/NewsletterForm.astro";
import { Icon } from "astro-icon/components";
---

<BaseLayout>
	<!-- Hero section -->
	<div class="mx-auto lg:max-w-4xl mt-40 mb-20">
		<div class="flex flex-col lg:flex-row lg:items-center lg:space-x-16">
			<div>
				<h1
					class="text-3xl sm:text-5xl font-bold tracking-tight text-balance"
				>
					Code. Blog. Repeat.
				</h1>
				<div class="mt-8 leading-8">
					<p>
						Hi! My name is Herman, Platform Engineer and Web Developer navigating 
						startup life in Åland Islands, Finland's tech scene. From identifying the problem 
						to development and testing, journey with me as I solve problems through coding and technology.
					</p>
				</div>
				<div class="mt-8 leading-8">
					<p>
						Gist of what I do: Writing technical documents, building CI/CD pipelines and handle operational tasks for the team’s area of responsibility
					</p>
				</div>
				<div class="mt-8 leading-8">
					<a href="mailto:herman.menor+hiring@gmail.com" class="flex items-center space-x-1 hover:text-primary-500">
						<Icon name="heroicons:envelope" class="size-5" />
						<span>Hire Me</span>
					</a>
				</div>
			</div>

			<div class="order-first lg:order-last flex-shrink-0 mb-8">

				<Image
					src={heroImageLight}
					alt="A logo of letters H and M in light mode."
					class="block dark:hidden  rounded-full  size-20 lg:size-[350px] object-cover ring-1 ring-slate-400/30 shadow"
				/>
				<Image
					src={heroImageDark}
					alt="A logo of letters H and M in light mode."
					class="hidden dark:block rounded-full size-20 lg:size-[350px] object-cover ring-1 ring-slate-400/30 shadow"
				/>
			</div>
		</div>
	</div>

	<!-- Featured articles -->
	<div class="mx-auto lg:max-w-4xl my-16 sm:my-30">
		<h2
			class="text-2xl sm:text-4xl font-bold tracking-tight mb-10 sm:mb-20"
		>
			Featured articles
		</h2>
		<FeaturedArticles />
	</div>

